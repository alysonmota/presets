{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"files": { "ignore": ["node_modules", "out", "dist"] },
	"linter": {
		"rules": {
			"complexity": {
				"useArrowFunction": "off"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"semicolons": "asNeeded",
			"lineWidth": 160
		}
	}
}
